<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#F5F5F5"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/iv_dealer_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dealer_sample_logo"
            android:scaleType="centerInside"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="dealer name"
            android:textSize="16sp"
            android:text="AA Japan (PVT) Ltd. TEST NAME"
            android:layout_toRightOf="@id/iv_dealer_logo"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="city, country"
            android:text="Yokohama, Japan "
            android:layout_toRightOf="@id/iv_dealer_logo"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_dealer_name"/>

        <TextView
            android:id="@+id/tv_deals_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deals in : "
            android:layout_marginBottom="4dp"
            android:layout_below="@id/iv_dealer_logo"/>

        <TextView
            android:id="@+id/tv_deals_in_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cars | Trucks | Heavy parts | Buses"
            android:layout_below="@id/iv_dealer_logo"
            android:layout_marginBottom="4dp"
            android:layout_alignBaseline="@id/tv_deals_in_label"
            android:layout_toRightOf="@id/tv_deals_in_label"/>

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTheme"
            android:layout_toLeftOf="@+id/btn_contact"
            android:layout_below="@id/tv_deals_in_value"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Contact"
            android:padding="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@color/colorTheme"
            android:layout_below="@id/tv_deals_in_value"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/btn_stock"
            android:layout_margin="4dp"/>

        <ImageView
            android:id="@+id/iv_fav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fav"
            android:layout_below="@id/tv_deals_in_value"
            android:layout_marginRight="8dp"
            android:padding="2dp"
            android:layout_alignBottom="@id/btn_stock"
            android:layout_toLeftOf="@id/btn_stock"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>